{% macro render_nav_item(nav_item, level=0) %}
  {% if nav_item is mapping %}
    {% for title, links in nav_item.items() %}
      {% if links is string %}
        {% if level == 0 %}
          <li class="nav-item ps-3">
            <a class="nav-link" href="{{ links }}">{{ title }}</a>
          </li>
        {% else %}
          <li><a class="dropdown-item" href="{{ links }}">{{ title }}</a></li>
        {% endif %}
      {% else %}
        {% if level == 0 %}
          <li class="nav-item dropdown ps-3">
            <a class="nav-link dropdown-toggle" href="#" id="nav-{{ title|lower }}" role="button" 
               data-bs-toggle="dropdown" aria-expanded="false">
              {{ title }}
            </a>
            <ul class="dropdown-menu" aria-labelledby="nav-{{ title|lower }}">
              {% for child in links %}
                {{ render_nav_item(child, level + 1) }}
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li class="dropdown-submenu dropend">
            <a class="dropdown-item dropdown-toggle" href="#" id="nav-{{ title|lower }}"
               data-bs-toggle="dropdown" aria-expanded="false">{{ title }}</a>
            <ul class="dropdown-menu" aria-labelledby="nav-{{ title|lower }}">
              {% for child in links %}
                {{ render_nav_item(child, level + 1) }}
              {% endfor %}
            </ul>
          </li>
        {% endif %}
      {% endif %}
    {% endfor %}
  {% endif %}
{% endmacro %}

{% macro render_nav(nav, post_directory_plural="posts") %}
<div class="sticky">
    <nav class="navbar navbar-dark navbar-expand-sm bg-tbbh justify-content-end pe-3 p-0">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsingNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse w-100 p-0" id="collapsingNavbar">
            <ul class="navbar-nav w-100 p-0 justify-content-center" style="display: flex; align-items: center;">
                {% if nav %}
                    {% for item in nav %}
                        {{ render_nav_item(item, 0) }}
                    {% endfor %}
                {% else %}
                    <li class="nav-item ps-3">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item ps-3">
                        <a class="nav-link" href="/{{ post_directory_plural }}">Blog</a>
                    </li>
                {% endif %}
                <li class="nav-item ps-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#searchModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"></path>
                        </svg> Search
                    </button>
                </li>
            </ul>
        </div>
    </nav>
</div>
{% endmacro %}
