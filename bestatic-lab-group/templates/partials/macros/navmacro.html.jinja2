{% macro render_nav_item(nav_item, level=0, is_homepage=false) %}
  {% if nav_item is mapping %}
    {% for title, links in nav_item.items() %}
      {% if links is string %}
        {% if level == 0 %}
          <li class="nav-item">
            <a class="nav-link {% if is_homepage %}homepage{% endif %}" href="{{ links }}">{{ title }}</a>
          </li>
        {% else %}
          <li><a class="dropdown-item" href="{{ links }}">{{ title }}</a></li>
        {% endif %}
      {% else %}
        {% if level == 0 %}
          <li class="nav-item dropdown">
            <a class="nav-link {% if is_homepage %}homepage{% endif %} dropdown-toggle" id="nav-{{ title|lower }}" role="button" 
               data-bs-toggle="dropdown" aria-expanded="false">
              {{ title }}
            </a>
            <ul class="dropdown-menu" aria-labelledby="nav-{{ title|lower }}">
              {% for child in links %}
                {{ render_nav_item(child, level + 1) }}
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li class="dropdown-submenu dropend">
            <a class="dropdown-item dropdown-toggle" href="#" id="nav-{{ title|lower }}"
               data-bs-toggle="dropdown" aria-expanded="false">{{ title }}</a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="nav-{{ title|lower }}">
              {% for child in links %}
                {{ render_nav_item(child, level + 1) }}
              {% endfor %}
            </ul>
          </li>
        {% endif %}
      {% endif %}
    {% endfor %}
  {% endif %}
{% endmacro %}

{% macro render_nav_homepage(nav, is_homepage=true) %}
